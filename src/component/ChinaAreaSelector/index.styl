
body {
  background: #eee;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  font-size: 12px;
  color:#000;
  margin: 0;
  padding: 0;
}
.swiper-container {
  font-size: 12px;
  position: relative;
  flex: 1;
  height: 300px;
  border: 1px solid #000
  &:before{
    content: "";
    display: block;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-2em);
    height: 1px;
    width: 100%;
    background-color: #666;
    z-index: 99;
  }
  &:after{
    content: "";
    display: block;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(2em);
    height: 1px;
    width: 100%;
    background-color: #666;
    z-index: 99;
  }
}
.swiper-slide {
  text-align: center;
  font-size: 12px;
  background: #fff;
  width: 100%;
  /* Center slide text vertically */
  flex-direction: column;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.mask{
  display: block;
  // display: none;
  font-size: 10px;
  background-color: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9900;
  overflow: hidden;
  // -webkit-animation-fill-mode: both;
  // animation-fill-mode: both;
}

.mask-wrap{
  position: absolute !important;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300px;
  border: 1px solid #000;
  display: flex;
  background-color: #fff;
  overflow: auto;
  .haha{
    border: 1px solid blue;
  }
}
