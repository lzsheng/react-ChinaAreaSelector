
body {
  background: #eee;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  font-size: 14px;
  color:#000;
  margin: 0;
  padding: 0;
}
.swiper-container {
  position: absolute !important;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300px;
  border: 1px solid #000
}
.swiper-slide {
  text-align: center;
  font-size: 18px;
  background: #fff;
  width: 100%;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}


.mask{
  display: block;
  display: none;
  font-size: 10px;
  background-color: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9900;
  overflow: hidden;
  // -webkit-animation-fill-mode: both;
  // animation-fill-mode: both;
}

.ChinaAreaSelector{
  z-index: 99;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box !important;
  border: 1px solid #2cbef9;
  background-color: #fff;
  width: 100%;
  height: 400px;
  display: flex;
  overflow: hidden;
  &>*{
    box-sizing: border-box !important;
  }
  .CAS_swipe{
    flex: 1;
    border: 1px solid #000;
    // transition: transform 0.4s;
  }
  .CAS_swipe-p{
    border-color:red;
  }
  .CAS_swipe-c{
    border-color:green;
  }
  .CAS_swipe-a{
    border-color:yellow;
  }
}
